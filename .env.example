# ===========================================
# xproof Environment Variables
# ===========================================
# Copy this file to .env and fill in your values.
# See docs/environment-variables.md for detailed descriptions.

# ----- Database -----
DATABASE_URL=postgresql://user:password@host:5432/xproof
PGHOST=localhost
PGPORT=5432
PGUSER=xproof
PGPASSWORD=
PGDATABASE=xproof

# ----- Session -----
SESSION_SECRET=your-session-secret-min-32-chars

# ----- xMoney (EGLD Payments) -----
XMONEY_API_KEY=
XMONEY_SITE_ID=
XMONEY_WEBHOOK_SECRET=

# ----- MultiversX Blockchain -----
# WalletConnect Project ID (get one at https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=

# Server-side transaction signing (optional)
MULTIVERSX_PRIVATE_KEY=
MULTIVERSX_SENDER_ADDRESS=erd1...
MULTIVERSX_CHAIN_ID=1
MULTIVERSX_GATEWAY_URL=https://gateway.multiversx.com

# Wallet address for receiving certification fees
PROOFMINT_WALLET_ADDRESS=erd1...

# ----- Replit (auto-populated on Replit) -----
REPL_ID=
REPLIT_DOMAINS=
REPLIT_DEV_DOMAIN=
